@page
@model MultiVendorMarketplaceMVC.Pages.Vendors.EditModel

@{
    // Layout = "~/Pages/Shared/_Layout.cshtml"; // Optional: Uncomment if using shared layout
    ViewData["Title"] = "Edit Vendor";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

@if (Model.Vendor != null)
{
    <form method="post">
        <div class="form-group mb-3">
            <label for="Name" class="form-label">Vendor Name</label>
            <input type="text" class="form-control" id="Name" name="Name"
                   value="@Model.Vendor.Name" required />
        </div>
        <div class="form-group mb-3">
            <label for="Email" class="form-label">Vendor Email</label>
            <input type="email" class="form-control" id="Email" name="Email"
                   value="@Model.Vendor.Email" required />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Page("Index")" class="btn btn-secondary ms-2">Cancel</a>
    </form>
}
else
{
    <div class="alert alert-warning">Vendor not found.</div>
    <a href="@Url.Page("Index")" class="btn btn-secondary">Back to List</a>
}
