@page
@model MultiVendorMarketplaceMVC.Pages.Vendors.CreateModel

@{
    // Layout = "~/Pages/Shared/_Layout.cshtml"; // Uncomment this line if you have a layout file
    ViewData["Title"] = "Create Vendor";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group mb-3">
        <label for="Name" class="form-label">Vendor Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Vendor?.Name" required />
    </div>
    <div class="form-group mb-3">
        <label for="Email" class="form-label">Vendor Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Vendor?.Email" required />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
