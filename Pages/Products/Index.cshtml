@page
@model MultiVendorMarketplaceMVC.Pages.Products.IndexModel

@{
    // Layout = "~/Pages/Shared/_Layout.cshtml"; // Uncomment this if you're using a shared layout
    ViewData["Title"] = "Products List";
}

<h2>@ViewData["Title"]</h2>

@if (Model.Products != null && Model.Products.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td> <!-- Currency format -->
                <td>
                    <a class="btn btn-sm btn-outline-primary" href="@Url.Page("Edit", new { id = product.Id })">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" href="@Url.Page("Delete", new { id = product.Id })">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No products found.</p>
}

<a class="btn btn-success" href="@Url.Page("Create")">Create New Product</a>
